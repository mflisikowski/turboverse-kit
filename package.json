{
  "name": "turborepo",
  "private": true,
  "scripts": {
    "purge": "rm -rf **/node_modules .turbo",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo run lint",
    "lint-staged": "lint-staged",
    "lint:fix": "turbo run lint:fix",
    "lint:packages": "sherif",
    "lint:packages:fix": "sherif --fix",
    "format": "biome format --write .",
    "lint:biome": "biome lint .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "cspell": "8.17.3",
    "husky": "9.1.7",
    "lint-staged": "^15.4.3",
    "sherif": "1.3.0",
    "turbo": "2.4.2",
    "typescript": "5.7.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "biome check --apply",
    "*.{ts,tsx,md,js,jsx}": "cspell --no-must-find-files"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22.0.0 <23.0.0",
    "pnpm": ">=9.0.0 <10.0.0"
  }
}
